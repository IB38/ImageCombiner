<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ImageCombiner.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="100"
             x:Class="ImageCombiner.App.Controls.CombinationTypeSelectorControl"
             x:DataType="viewModels:CombinationTypeSelectorViewModel"
             >
    <Grid RowDefinitions="1*,1*,1*">
        <Label Grid.Row="0" Name="CombinationTypeLabel" Content="Combination type" FontWeight="Bold"/>
        <RadioButton Grid.Row="1" Name="VerticalButton" GroupName="CombinationTypeButtons" Content="Vertical" IsDefault="True" IsChecked="True" Click="VerticalButton_OnClick"/>
        
        <RadioButton Grid.Row="2" Name="HorizontalButton" GroupName="CombinationTypeButtons" Content="Horizontal" Click="HorizontalButton_OnClick"/>
    </Grid>
</UserControl>
